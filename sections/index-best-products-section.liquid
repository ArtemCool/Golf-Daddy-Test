<div class="w-screen scrolling-wrapper overflow-x-scroll ovefflow-y-hidden md::overflow-y-auto md::overflow-auto">
  <div class="grid grid-cols-3 min-w-[825px]">
    {% for product in section.settings.best_product_collection.products %}
      <div class="dif-backs px-1 py-9 flex flex-col gap-9 min-w-[275px]">
        <div class="h-[300px] xl:h-auto overflow-hidden flex items-center justify-center">
          {{ product.featured_image | image_url: height: 380 | image_tag: loading: 'lazy' }}
        </div>
        <div class="flex flex-col gap-6">
          <span class="text-center font-grace text-white text-2xl xl:text-3xl">{{ product.type }}</span>
          <h3 class="font-scania text-white text-2xl lg:text-3xl xl:text-4xl text-center">{{ product.title }}</h3>
        </div>
        <div class="relative mx-auto">
          {% render 'icon-button-border' %}
          <a class="w-min whitespace-nowrap text-white font-helvetica mx-auto py-4 px-12 absolute top-0 hover:text-gray-400 duration-300" href="{{ product.url }}">{{ section.settings.product_link_text }}</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .dif-backs:first-child {
    background: #BADE2F;
  }
  .dif-backs:nth-child(2) {
    background-color: #6CD565;
  }
  .dif-backs:last-child {
    background-color: #53E28D;
  }
</style>

{% schema %}
  {
    "name": "Best Products Section",
    "settings": [
      {
        "type": "collection",
        "id": "best_product_collection",
        "label": "Best Product Collection"
      }, {
        "type": "text",
        "id": "product_link_text",
        "label": "Product Link Text",
        "default": "View more"
      }
    ]
  }
{% endschema %}