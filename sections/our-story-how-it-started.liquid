    </div>
    <p class="font-helvetica text-sm lg:text-base text-center lg:px-32">{{ section.settings.who_we_are_text }}</p>
    <div class="mx-auto relative rounded-3xl">
      {{ section.settings.who_we_are_image | image_url: width: 1020 | image_tag: loading: 'lazy' }}
