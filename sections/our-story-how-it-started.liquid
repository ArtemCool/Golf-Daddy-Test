      {{ section.settings.founders_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
      <div class="absolute -bottom-16 right-0 z-30">
        <span class="uppercase font-grace text-[70px] lg:text-[80px] xl:text-[96px] gradient-text whitespace-nowrap">{{ section.settings.founders_image_span }}</span>
      </div>
      <div class="absolute z-20 -bottom-7 -right-6 border-2 border-white rounded-3xl">
        {{ section.settings.founders_small_image | image_url: width: 120 | image_tag: loading: 'lazy' }}
      </div>
    </div>
  </div>
</div>

