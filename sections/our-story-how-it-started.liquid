<div class="pt-16 pb-4 container">
  <h2 class="font-helvetica text-2xl lg:text-3xl text-center pb-16">{{ section.settings.how_it_started_heading }}</h2>
  <div class="grid md:grid-cols-2 gap-10 lg:gap-28 items-center justify-center pb-16 md:pb-36 relative">
    <div class="relative max-w-[600px] mx-auto md:mx-0 rounded-3xl">
      {{ section.settings.origins_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
      <div class="absolute top-7 -right-4 sm:bottom-0">
        {% render 'icon-product-master-line' %}
      </div>
      <div class="absolute z-20 -bottom-7 -right-6 border-2 border-white rounded-3xl">
        {{ section.settings.origins_small_image | image_url: width: 100 | image_tag: loading: 'lazy' }}
      </div>
    </div>
    <div class="grid gap-4">
      <span class="font-grace text-2xl sm:text-3xl uppercase">{{ section.settings.origins_upper_span }}</span>
      <h3 class="font-scania text-xl sm:text-3xl lg:text-4xl">{{ section.settings.origins_heading }}</h3>
      {% render 'icon-small-custom-underline' %}
      <p class="font-helvetica text-sm lg:text-base">{{ section.settings.origins_text }}</p>
    </div>
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 hidden md:block">
      {% render 'icon-custom-arrow-down-1' %}
    </div>
  </div>
</div>

<div class="pb-16 container">
  <div class="grid md:grid-cols-2 gap-10 lg:gap-28 items-center justify-center">
    <div class="grid gap-4">
      <span class="font-grace text-2xl sm:text-3xl uppercase">{{ section.settings.founders_upper_span }}</span>
