<div class="container py-16">
  <div class="grid items-center md:grid-cols-2 gap-16 md:gap-6">
    <div class="">
      <div>
        {{ section.settings.right-text-image | image_url: width: 1000 | image_tag: loading: 'lazy' }}
      </div>
    </div>
    <div class="grid gap-6">
      <span class="font-grace text-2xl uppercase">{{ section.settings.right-text-upper-heading }}</span>
      <h2 class="font-scania text-xl sm:text-3xl lg:text-4xl">{{ section.settings.right-text-heading }}</h2>
      {% render 'icon-small-custom-underline' %}
      <p class="font-helvetica text-sm sm:text-md">{{ section.settings.right-text-paragraph }}</p>
      <a class="border-class text-center gradient-bg w-min whitespace-nowrap py-4 px-12 duration-300 font-bold font-helvetica mx-0" href="#">{{ section.settings.right-text-button-text }}</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Socials With Right Text",
    "settings": [
      {
        "type": "text",
        "id": "right-text-upper-heading",
        "default": "Youtube Shorts",
        "label": "Right Text Social Section Upper Heading"
      },
      {
        "type": "image_picker",
        "id": "right-text-image",
        "label": "Right Text Social Section Image"
      },
      {
        "type": "text",
        "id": "right-text-heading",
        "default": "Join us on Youtube",
        "label": "Right Text Social Section Heqding"
      },
      {
        "type": "text",
        "id": "right-text-paragraph",
        "default": "It started in our college dorm room after a historic terrible round of golf. We couldnâ€™t justify paying for the range or lessons anymore as they were not that effective, but we believed that there was still a better way for golfers to improve.",
        "label": "Right Text Social Section Text"
      }, {
        "type": "text",
        "id": "right-text-button-text",
        "default": "Our Shorts",
        "label": "Right Text Social Section Button Text"
      }
    ]
  }
{% endschema %}