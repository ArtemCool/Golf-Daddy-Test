{% case media.media_type %}
	{% when 'image' %}
		{{ media | image_url: width: master | image_tag: loading: 'lazy', class: class }}

	{% when 'video' %}
		{{ media | video_tag: controls: true, class: class }}

	{% when 'external_video' %}
		{{ media | external_video_tag: class: class }}

	{% when 'model' %}
		<product-model>
			<div>
				<button class="w-full h-full bg-gray-100 border relative">
					<span class="border bg-gray-100 absolute transform -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2">
						{% render 'icon-model-viewer' %}
					</span>
					<img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt }}" class="w-full h-full object-cover {{ class }}">
				</button>
			</div>
			<template>
				{{ media | model_viewer_tag: reveal: 'interaction' }}
			</template>
		</product-model>
	
	{% else %}
		{{ media | media_tag }}
		
{% endcase %}