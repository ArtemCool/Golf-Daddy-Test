<div class="flex gap-6 w-full max-w-[900px] mx-auto py-6 border-b border-lite_gray_text">
  <div class="flex items-center w-full gap-6">
    <a href="{{ product.url }}" class="flex items-center justify-center">
      {% if product.featured_image %}
        {{ product.featured_image | image_url: width: 350 | image_tag: loading: 'lazy', class: image_class }}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: image_class }}
      {% endif %}
    </a>
    <div class="grid grid-cols-1 sm:grid-cols-2 w-full gap-2 md:gap-4">
      <a href="{{ product.url }}">
        <h3 class="md:text-2xl text-lg font-helvetica font-bold hover:text-gray-500">{{ product.title }}</h3>
      </a>
      <div class="flex font-helvetica font-bold md:text-2xl text-xl justify-start md:justify-end items-center">
        <span class="sr-only">{{ 'products.product.price.sale_price' | t }}</span>
        {{ product.price | money }}
      </div>
      <p class="font-helvetica text-sm text-secondary_gray">{{ product.description }}</p>
    </div>
  </div>
</div>